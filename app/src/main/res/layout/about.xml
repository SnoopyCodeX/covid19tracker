<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:id="@+id/about_header"
		android:layout_height="135dp"
		android:layout_width="match_parent"
		android:padding="10dp"
		android:background="#0D0D0D"
		android:layout_alignParentTop="true"
		android:orientation="vertical">

		<TextView
			android:id="@+id/app_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			android:text="@string/app_name"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_gravity="top"
			android:layout_marginTop="5dp"/>

		<TextView
			android:id="@+id/app_version"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="#D3D3D3"
			android:text="App Version"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_gravity="top"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/about_header"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_marginBottom="5dp"
		android:background="#ffffff"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">

			<ImageView
				android:id="@+id/about_dev"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_marginTop="50dp"
				android:layout_marginRight="8dp"
				android:layout_marginLeft="4dp"
				android:cropToPadding="true"
				android:background="@drawable/card_dev_main_bg"
				android:src="@drawable/developer"/>

			<ImageView
				android:id="@+id/about_fb"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_marginTop="50dp"
				android:layout_marginRight="4dp"
				android:layout_marginLeft="8dp"
				android:cropToPadding="true"
				android:background="@drawable/card_dev_main_bg"
				android:src="@drawable/facebook"/>

		</LinearLayout>

		<ScrollView
			android:fitsSystemWindows="true"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:scrollbars="none">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<android.support.v7.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="4dp"
					app:cardBackgroundColor="#1D1D1D">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:background="#ffffff">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_margin="2dp"
							android:gravity="center"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#1D1D1D"
							android:textStyle="bold"
							android:text="ABOUT APP"/>

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_margin="2dp"
							android:gravity="center"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:textColor="#1D1D1D"
							android:text="This is an open-source app that shows all the current number of cases, deaths and recovered patients from every country that is affected by Corona Virus Disease - 2019.\n\n★Cyber Droid Developers PH™★\n©2020-2021©"/>

					</LinearLayout>

				</android.support.v7.widget.CardView>

				<android.support.v7.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="4dp"
					style="@style/Card.Material.Red">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:background="#ffffff">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_margin="2dp"
							android:gravity="center"
							android:typeface="monospace"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#e74c3c"
							android:textStyle="bold"
							android:text="DISCLAIMER"/>

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_margin="2dp"
							android:gravity="center"
							android:typeface="monospace"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:textColor="#e74c3c"
							android:text="This is not an official app of any worldwide nor nationwide government association(s)."/>

					</LinearLayout>

				</android.support.v7.widget.CardView>

				<android.support.v7.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="4dp"
					app:cardBackgroundColor="#1D1D1D">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_margin="5dp"
						android:orientation="vertical"
						android:background="#ffffff">

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_margin="2dp"
							android:gravity="center"
							android:textAppearance="?android:attr/textAppearanceMedium"
							android:textColor="#1D1D1D"
							android:textStyle="bold"
							android:text="CREDITS"/>

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_margin="2dp"
							android:gravity="left"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:textColor="#1D1D1D"
							android:text="★Flag Icons and App Icons★\n•https://flaticons.com\n•https://icons8.com\n•https://iconfinder.com\n•https://pngtree.com\n•https://countryflags.com\n•https://iconscout.com\n\n\n★RecyclerView with SearchView★\n•https://tutorialspoint.com\n\n\n★CoViD-19 API★\n•https://github.com/javieraviles/covidAPI\n•https://coronavirus-19-api.herokuapp.com"
							android:textIsSelectable="true"/>

					</LinearLayout>

				</android.support.v7.widget.CardView>

			</LinearLayout>

		</ScrollView>

	</LinearLayout>

	<ImageView
		android:id="@+id/app_logo"
		android:layout_width="145dp"
		android:layout_height="140dp"
		android:layout_below="@+id/about_header"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="-70dp"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:src="@drawable/coronavirus"
		android:background="@drawable/card_profile_main_bg"
		android:cropToPadding="true"/>

</RelativeLayout>

